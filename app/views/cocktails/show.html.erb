<div class="container">

  <div>
    <h1> <%= @cocktail.name %> </h1>
    <% @doses.each do |dose| %>
     <p>
      <%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to "Delete Dose", dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
     </p>
    <% end %>
  </div>

  <div>
    <p> </p>
  </div>

  <div>
    <p><%= link_to "Include Doses of Ingredients", new_cocktail_dose_path(@cocktail) %></p>
  </div>

  <div>
    <p><%= link_to "Back to All Cocktails", root_path %></p>
  </div>

</div>



