<div class="container">

  <div class="title-cocktail">
    <h2> <%= @cocktail.name %> </h2>
  </div>

  <div class="show-cocktail col-xs-12 col-sm-8">
    <div class="cocktail">
      <p> <%= cl_image_tag @cocktail.photo, height: 300, width: 500, crop: :fill %> </p>
      <% @doses.each do |dose| %>
      <p> <%= dose.description %> of <%= dose.ingredient.name %>
        <%= link_to "delete", dose_path(dose),
        method: :delete,
        data: { confirm: "are you sure?" } %>
      </p>
      <% end %>
    </div>
    <div>
      <p> <i class="fas fa-plus-circle"></i> <%= link_to "include dose of ingredients", new_cocktail_dose_path(@cocktail) %></p>
    </div>
  </div>

  <div class="list-reviews col-xs-12 col-sm-4">
    <div class="reviews">
      <h3>reviews</h3>
      <% @reviews.each do |review| %>
      <p> <%= review.description %> </p>
      <p> <%= review.rating %> </p>
      <% end %>
    </div>

    <h3>do your review</h3>
    <div class="your-review">
      <div >
        <%= simple_form_for [@cocktail, @review] do |f| %>
        <%= f.input :description %>
        <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
        <%= f.submit "Add a Review", class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="back-to-all">
    <p> <i class="fas fa-arrow-circle-left"></i> <%= link_to "back to all", root_path %></p>
  </div>

</div>



